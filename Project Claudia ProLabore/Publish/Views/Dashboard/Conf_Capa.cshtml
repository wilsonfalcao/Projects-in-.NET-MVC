@model Projeto_Laboral.Body.Body_BI_Home

@{
    ViewBag.Title = "Conf_Capa";
    Layout = "~/Views/_SharedBI.cshtml";
}

<!--CSS-->
<link rel="stylesheet" href="~/Content/css/bootstrap3-wysihtml5.min.css">
<!-- jQuery -->
<script src="~/Content/js/jsbi/jquery-1.7.1.min.js"></script>
<script src="~/Content/js/jsbi/jquery.validate.min.js"></script>
<script src="~/Content/js/jsbi/jquery.validate.unobtrusive.min.js"></script>

<!--Conteúdo Box Imagem-->
<div class="row"> 
<!--Lado Esquerdo-->       
<section class="col-md-5 connectedSortable">
<div class="box box-primary">
<div class="box-header with-border">
<h3 class="box-title">Configuração de imagem</h3>
</div>
@using (Html.BeginForm("Capa_Conf_Img", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="box-body">
<div class="form-group">
<label>Tipo de Apresentação:</label>
<select id="type_dado" class="form-control" name="ap_capa" onchange="addtextbox() ">
<option value="0" selected></option>
<option value="1">Video Web</option>
<option value="2">Foto do Computador</option>
<option value="3">Foto da Web</option>
</select>
<p id="ctext"></p>                    
<div class="box-footer">
<button type="submit" class="btn btn-primary">Enviar</button>
</div>
</div>
</div>
}
</div>
</section>
</div>
<div class="row">
<section class="col-md-5 connectedSortable">
<div class="box box-primary">
<div class="box-header with-border">
<h3 class="box-title">Frases de efeito</h3>
</div>
@using (Html.BeginForm("Capa_Conf_Frase", "Dashboard", FormMethod.Post))
{
<div class="box-body">
<div class="form-group">
<label>Título 1:</label>
<input type="text" class="form-control" name="Title" required maxlength="30" />
<label>-- Mensagem 1</label>
<input type="text" class="form-control" name="Text" required maxlength="100" />

<label>Titulo 2:</label>
<input type="text" class="form-control" name="Title2" required maxlength="30" />
<label>-- Mensagem 2</label>
<input type="text" class="form-control" name="Text2" required maxlength="100" />

<label>Titulo 3:</label>
<input type="text" class="form-control" name="Title3" required maxlength="30" />
<label>-- Mensagem 3</label>
<input type="text" class="form-control" name="Text3" required maxlength="100" />
                    
<div class="box-footer">
<button type="submit" class="btn btn-primary">Enviar</button>
</div>
</div>
</div>
}
</div>
</section>
<section class="col-md-5 connectedSortable">
<div class="box box-primary">
<div class="box-header with-border">
<h3 class="box-title">Informação sobre a empresa</h3>
</div>
@using (Html.BeginForm("Capa_Conf_Sobre", "Dashboard", FormMethod.Post))
{
<div class="box-body">
<div class="form-group">
<label>Sobre a empresa :</label> 
<textarea class="textarea" name="Sobre" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>                 
<div class="box-footer">
<button type="submit" class="btn btn-primary">Cadastrar</button>
</div>
</div>
</div>
}
</div>
</section>
</div>

<!--Script de Pagína-->
<script type="text/javascript">
      function addtextbox() {
          var x = document.getElementById("type_dado").value;
          switch (x)
          {
              case ("2"): document.getElementById("ctext").innerHTML = ""; document.getElementById("ctext").innerHTML = "<label>Imagem Local:</label><input class='form-control' name='img_pc' type='file'> "; break;
              case ("3"): document.getElementById("ctext").innerHTML = ""; document.getElementById("ctext").innerHTML = "<label>Imagem Web:</label><input class='form-control' name='img_web' type='url'> "; break;
              default:document.getElementById("ctext").innerHTML = "";
          }
         
      }
</script>
@if (ViewBag.Cadastro_State != "1")
{
    @Html.Partial("ModalAlert");
}