@model MvcApplication4.Controllers.Body_
@{
    ViewBag.Title = "Cadastro_Setor";
    Layout = "~/Views/_Shared.cshtml";
}

<!-- jQuery -->
    <script src="~/Content/js/jquery-1.7.1.min.js"></script>
    <script src="~/Content/js/jquery.validate.min.js"></script>
    <script src="~/Content/js/jquery.validate.unobtrusive.min.js"></script>
<div class="row">        
<section class="col-md-5 connectedSortable">
<div class="box box-primary">
<div class="box-header with-border">
<h3 class="box-title">Cadastro de Lugar</h3>
</div>
    @using(Html.BeginForm("Cadastro_Setor1","Servicos",FormMethod.Post,null))
    {
<div class="box-body">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                      <label>Owner do Setor:</label>
                       @Html.TextBoxFor(x => x.Nome_User, new {@class="form-control", @name="owner", @placeholder="Nome"})
                        @Html.ValidationMessageFor(xb => xb.Nome_User)
                      <label>Ramal:</label>
                        @Html.TextBoxFor(x1 => x1.Ramal,new {@class="form-control", @name="ramal", @placeholder="DDD + Número com 9 Digitos"})
                        @Html.ValidationMessageFor(xb => xb.Ramal)                      
                        <label>E-mail:</label>
                        @Html.TextBoxFor(x2 => x2.Email_Setor,new {@class="form-control", @name="email", @placeholder="nome@dominio.com/com.br"})
                        @Html.ValidationMessageFor(xb => xb.Email_Setor)
                        <label>Nome do Setor:</label>
                        @Html.TextBoxFor(x4 => x4.Setor, new {@class="form-control", @name="Nomesetor"})
                        @Html.ValidationMessageFor(xb => xb.Setor)
                        <label>Trabalhadores:</label>
                     @Html.TextBoxFor(x5 => x5.Qtd_Pessoas,new {@class="form-control", @name="senha", @type="number"})
                    @Html.ValidationMessageFor(xb => xb.Qtd_Pessoas)
                    </div>
                  </div>
                    <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
</div>
    }
</div>
</section>
</div>
@if (ViewBag.Cadastro_State == "Sucesso")
{
    @Html.Partial("ModalAlert")
}