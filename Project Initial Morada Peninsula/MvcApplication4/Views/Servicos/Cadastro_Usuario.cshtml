@model MvcApplication4.Controllers.Body_
@{
    ViewBag.Title = "Cadastro_Usuario";
    Layout = "~/Views/_Shared.cshtml";
}

<!-- jQuery -->
    <script src="~/Content/js/jquery-1.7.1.min.js"></script>
    <script src="~/Content/js/jquery.validate.min.js"></script>
    <script src="~/Content/js/jquery.validate.unobtrusive.min.js"></script>
<div class="row">        
<section class="col-md-5 connectedSortable">
<div class="box box-primary">
<div class="box-header with-border">
<h3 class="box-title">Cadastro de Lugar</h3>
</div>
    @using(Html.BeginForm("Cadastro_Usuario1","Servicos",FormMethod.Post,null))
    {
<div class="box-body">
                    <div class="form-group">
                        @Html.ValidationSummary(true)
                      <label>Nome Completo:</label>
                       @Html.TextBoxFor(x => x.Nome_User, new {@class="form-control", @name="nome", @placeholder="Nome"})
                        
                      <label>Telefone:</label>
                        @Html.TextBoxFor(x1 => x1.Ramal,new {@class="form-control", @name="ramal", @placeholder="DDD + Número com 9 Digitos"})
                                         
                        <label>E-mail:</label>
                        @Html.TextBoxFor(x2 => x2.Email,new {@class="form-control", @name="email", @placeholder="nome@dominio.com/com.br"})
                        
                    </div>
                    <div class="form-inline">
                        <label>Nível de Usuário:</label>
                        @Html.DropDownListFor(x3 => x3.Nivel,new SelectList(ViewBag.Nivel), new {@class="form-control", @name="comboboxnivel"})
                                      
                    </div>
                    <div class="form-group">
                    <label>Senha:</label>
                    @Html.TextBoxFor(x5 => x5.Senha,new {@class="form-control", @name="senha", type="password"})

                    <label>Repetir Senha:</label>
                    @Html.TextBoxFor(x6 => x6.Conf_Senha,new {@class="form-control",@type="password"})
                    
                    </div>
                  </div>
                    <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                        <div>
                        <span class="label label-danger">@Html.ValidationMessageFor(xb1 => xb1.Nome_User)</span>
                        <span class="label label-danger">@Html.ValidationMessageFor(xb1 => xb1.Ramal)  </span>
                       <span class="label label-danger"> @Html.ValidationMessageFor(xb1 => xb1.Email) </span>
                       <span class="label label-danger"> @Html.ValidationMessageFor(xb1 => xb1.Nivel)</span>
                       <span class="label label-danger"> @Html.ValidationMessageFor(xb1 => xb1.Senha)   </span>
                            </div>
</div>
    }
</div>
</section>
</div>
@if (ViewBag.Cadastro_State == "Sucesso")
{
    @Html.Partial("ModalAlert")
}